{
  "name": "covialib",
  "version": "1.0.0",
  "description": "TypeScript client library for Covia grid API",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "covia",
    "grid",
    "api",
    "typescript",
    "assets",
    "operations"
  ],
  "author": "Covia AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/covia-ai/covialib.git"
  },
  "bugs": {
    "url": "https://github.com/covia-ai/covialib/issues"
  },
  "homepage": "https://github.com/covia-ai/covialib#readme",
  "devDependencies": {
    "@types/node": "^22.10.0",         
    "@typescript-eslint/eslint-plugin": "^8.17.0", 
    "@typescript-eslint/parser": "^8.17.0",        
    "eslint": "^9.15.0",                
    "prettier": "^3.4.2",               
    "tsup": "^8.3.5",                    
    "typescript": "^5.7.2",             
    "vitest": "^2.1.8"    
  },
  "engines": {
    "node": ">=18.0.0"
  }
}